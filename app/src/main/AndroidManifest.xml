<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="boonleng94.iguide">

    <application
        android:name="boonleng94.iguide.MainApp"
        android:allowBackup="true"
        android:icon="@drawable/iguide_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/iguide_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="boonleng94.iguide.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="boonleng94.iguide.MainDestinationsActivity">
        </activity>

        <activity android:name="boonleng94.iguide.MainNavigationActivity">
        </activity>

    </application>

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
</manifest>
